Name_Not_Found<>sage<>03/09/03 00:12 ID:???<> <a href="../test/read.cgi/hp/1005046309/564" target="_blank">&gt;&gt;564</a> <br> (defvar *564-id-format-pattern* "id=\"d%y%m%d\\(.\\)" <br>   "id のフォーマット") <br> (defvar *564-change-of-day-hour* 6 <br>   "日付の変わる時間") <br> (defvar *564-cursor-pattern* "${cursor}" <br>   "テンプレート挿入後のカーソル位置") <br> (defvar *564-sequence-pattern* "${seq}" <br>   "テンプレートで連番に置換される") <br> (defvar *564-section-start-pattern* "&lt;div class=\"section\"" <br>    "テンプレートでの section の開始パターン") <br> (defvar *564-template* <br>   "&lt;div class=\"section\" id=\"d%y%m%d${seq}\"&gt; <br> &lt;h3&gt;&lt;a href=\"%y%m.html#d%y%m%d${seq}\"&gt;${cursor}&lt;/a&gt;&lt;/h3&gt; <br>  <br> &lt;/div&gt;") <br>  <br> (defun 564-succ (c) <br>   "564: 連番生成関数(超簡易版)" <br>   (cond ((characterp c) <br>          (string (code-char (1+ (char-code c))))) <br>         ((stringp c) <br>          (564-succ (char c 0))) <br>         (t <br>          "a"))) <br>  <>
Name_Not_Found<>sage<>03/09/03 00:13 ID:???<> <a href="../test/read.cgi/hp/1005046309/564" target="_blank">&gt;&gt;564</a> <br> (defun hoge (title) <br>   (interactive "sTitle: ") <br>   (multiple-value-bind (second minute hour day month year) <br>       (get-decoded-time) <br>     (let* ((class "&lt;div class=\"section\" id=\"~A~A\"&gt;") <br>    (head "&lt;h3&gt;&lt;a href=\"~A#~A~A\"&gt;~A&lt;/a&gt;&lt;/h3&gt;") <br>    (filename (if (get-buffer-file-name) <br>  (file-namestring (get-buffer-file-name)) <br>        (format nil "~2,'0d~2,'0d.html" (mod year 100) month))) <br>    (anchor (format nil "d~2,'0d~2,'0d~2,'0d" (mod year 100) month day)) <br>    (re (format nil class anchor "\\(.\\)")) <br>    (char #\`)) <br>       (save-excursion <br> (goto-char (point-min)) <br> (while (scan-buffer re :regexp t :tail t) <br>   (let ((c (char-after (match-beginning 1)))) <br>     (if (char&gt; c char) <br> (setq char c))))) <br>       (setq char (code-char (1+ (char-code char)))) <br>       (insert (format nil class anchor char) #\LFD <br>       (format nil head filename anchor char title) <br>       "\n\n&lt;/div&gt;\n") <br>       (forward-char -8)))) <>
